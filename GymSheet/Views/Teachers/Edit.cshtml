@model GymSheet.Models.Teacher

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Editar Professor</h4>
        </div>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <p class="text-center">
                        <img class="img" src="@Url.Content(Model.ImgPath)" width="100" height="100"/>
                        </p>
                        <div class="form-group">
                            <label asp-for="ImgPath" class="control-label col-md-3"></label>
                            <div class="col-md-7">
                                <input asp-for="ImgPath" type="file" name="img" class="form-control" onchange="LoadImg(this)"/>
                                <span asp-validation-for="ImgPath" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label col-md-3"></label>
                            <div class="col-md-7">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Period" class="control-label col-md-3"></label>
                            <div class="col-md-7">
                                <select asp-for="Period" class="form-control">
                                    <option>Manhã</option>
                                    <option>Tarde</option>
                                    <option>Noite</option>
                                </select>
                                <span asp-validation-for="Period" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label col-md-3"></label>
                            <div class="col-md-7">
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success btn-sm">Salvar</button>
            </div>
        </form>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
