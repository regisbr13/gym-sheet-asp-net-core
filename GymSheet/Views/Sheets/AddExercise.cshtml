@model GymSheet.Models.ExerciseList

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Adicionar Exercício</h4>
        </div>
        <form asp-action="AddExercise">
            <input type="hidden" asp-for="ExerciseId" />
            <input type="hidden" asp-for="SheetId" />
            <div class="modal-body">
                <div class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Frequency" class="control-label col-md-3"></label>
                        <div class="col-md-6">
                            <input asp-for="Frequency" class="form-control" value="" />
                            <span asp-validation-for="Frequency" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Repetitions" class="control-label col-md-3"></label>
                        <div class="col-md-6">
                            <input asp-for="Repetitions" class="form-control" value="" />
                            <span asp-validation-for="Repetitions" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Charge" class="control-label col-md-3"></label>
                        <div class="col-md-6">
                            <input asp-for="Charge" class="form-control" value="" />
                            <span asp-validation-for="Charge" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success btn-sm">Salvar</button>
            </div>
        </form>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

